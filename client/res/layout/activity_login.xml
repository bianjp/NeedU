<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/skyblue">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="登录" 
        android:textSize="20sp"/>

      <View
          android:layout_width="400dp"
          android:layout_height="1px"
          android:layout_marginTop="35dp"
          android:layout_centerHorizontal="true"
          android:background="@color/black" />

      <EditText
          android:id="@+id/loginName"
          android:inputType="number"
          android:layout_width="230dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/loginButton"
          android:layout_below="@+id/textView1"
          android:layout_marginTop="62dp"
          android:background="@drawable/bg_edittext_normal"
          android:ems="10"
          android:paddingLeft="6dp"
          android:hint="输入学号" >

          <requestFocus />
      </EditText>

      <EditText
          android:id="@+id/loginPassword"
          android:inputType="textPassword"
          android:layout_width="230dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/loginName"
          android:layout_below="@+id/loginName"
          android:layout_marginTop="27dp"
          android:background="@drawable/bg_edittext_normal"
          android:ems="10"
          android:paddingLeft="6dp"
          android:hint="输入密码" />

      <Button
          android:id="@+id/loginButton"
          android:layout_width="230dp"
          android:layout_height="40dp"
          android:layout_below="@+id/loginPassword"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="40dp"
          android:text="登录" />

      <Button
          android:id="@+id/forgetPasswordButton"
          android:layout_width="100dp"
          android:layout_height="35dp"
          android:layout_alignLeft="@+id/loginButton"
          android:layout_alignParentBottom="true"
          android:layout_marginBottom="54dp"
          android:layout_marginLeft="16dp"
          android:background="@color/skyblue"
          android:text="忘记密码?" />

      <Button
          android:id="@+id/registerButton"
          android:layout_width="100dp"
          android:layout_height="35dp"
          android:layout_alignBaseline="@+id/forgetPasswordButton"
          android:layout_alignBottom="@+id/forgetPasswordButton"
          android:layout_toRightOf="@+id/forgetPasswordButton"
          android:background="@color/skyblue"
          android:text="注册" />

      <View
          android:layout_width="1px"
          android:layout_height="25dp"
          android:layout_marginTop="5dp"
          android:layout_marginLeft="-10dp"
          android:layout_alignTop="@+id/registerButton"
          android:layout_toRightOf="@+id/textView1"
          android:background="@color/black" />

</RelativeLayout>