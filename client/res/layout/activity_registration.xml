<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zhuomiankaifa.Registration$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="注册"
        android:textSize="20dp" />

    <View
        android:layout_width="400dp"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nicknameEditText"
        android:layout_alignBottom="@+id/nicknameEditText"
        android:layout_alignLeft="@+id/textView4"
        android:text="昵称"
        android:textSize="18dp" />
        
     <EditText
        android:id="@+id/nicknameEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="34dp"
        android:layout_toRightOf="@+id/textView2"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />
        
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nicknameEditText"
        android:layout_toLeftOf="@+id/schoolEditText"
        android:text="学校"
        android:textSize="18dp" />
        
    <EditText
        android:id="@+id/schoolEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/collegeEditText"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />
     
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/nicknameEditText"
        android:layout_marginTop="20dp"
        android:text="姓名"
        android:textSize="18dp" />
     
    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/collegeEditText"
        android:layout_alignBottom="@+id/collegeEditText"
        android:layout_alignLeft="@+id/textView3"
        android:text="学院"
        android:textSize="18dp" />
    
    <EditText
        android:id="@+id/collegeEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/birthdayEditText"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />
    
    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/checkBox2"
        android:text="性别"
        android:textSize="18dp" />
    
    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView8"
        android:text="男" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox2"
        android:layout_alignBottom="@+id/checkBox2"
        android:layout_toRightOf="@+id/checkBox2"
        android:text="女" />
    
    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_alignLeft="@+id/textView5"
        android:text="生日"
        android:textSize="18dp" />
      
    <EditText
        android:id="@+id/birthdayEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignLeft="@+id/qqEeditText"
        android:layout_alignTop="@+id/textView7"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="17dp"
        android:text="手机"
        android:textSize="18dp" />
    
    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/phoneEditText"
        android:layout_alignLeft="@+id/textView7"
        android:text="QQ"
        android:textSize="18dp" />
    
    <EditText
        android:id="@+id/qqEeditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignBottom="@+id/textView9"
        android:layout_alignLeft="@+id/weixinEditText"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />
    
    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qqEeditText"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/phoneEditText"
        android:text="账号"
        android:textSize="18dp" />
    
    <EditText
        android:id="@+id/accountEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView10"
        android:layout_toRightOf="@+id/textView10"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />
    
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView12"
        android:layout_alignLeft="@+id/textView9"
        android:text="微信"
        android:textSize="18dp" />
    
     <EditText
        android:id="@+id/weixinEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_toRightOf="@+id/textView13"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView10"
        android:layout_below="@+id/accountEditText"
        android:layout_marginTop="18dp"
        android:text="密码"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/codeEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView12"
        android:layout_toRightOf="@+id/textView12"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/codeEditText"
        android:layout_alignLeft="@+id/textView1"
        android:text="确认密码"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/ensureCodeEditText"
        android:layout_width="80dp"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toRightOf="@+id/textView13"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/ensureCodeEditText"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="34dp"
        android:text="我已仔细阅读并接受服务条款"
        android:textSize="16dp" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/confirmButton"
        android:layout_alignBottom="@+id/confirmButton"
        android:layout_alignLeft="@+id/textView11"
        android:text="取消" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/codeEditText"
        android:layout_below="@+id/checkBox1"
        android:layout_marginTop="31dp"
        android:text="确定" />

</RelativeLayout>