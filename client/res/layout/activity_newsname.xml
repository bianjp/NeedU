<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
     tools:context="com.zhuomiankaifa.Ground$PlaceholderFragment" >
 <LinearLayout android:id="@+id/linearlayout02"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:background="#BB768e95">
	    <Button 
	        android:text="广场"
			android:id="@+id/squareButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button android:text="个人"
			android:id="@+id/personalButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button android:text="设置"
			android:id="@+id/setButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
	</LinearLayout>

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_alignParentLeft="true"
     android:layout_alignParentTop="true"
     android:paddingBottom="@dimen/activity_vertical_margin"
     android:paddingLeft="@dimen/activity_horizontal_margin"
     android:paddingRight="@dimen/activity_horizontal_margin"
     android:paddingTop="@dimen/activity_vertical_margin" >

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="0dp"
         android:layout_weight="0.2"
         android:src="@drawable/ic_launcher" />

     <TextView
         android:id="@+id/textView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="60dp"
         android:layout_marginTop="10dp"
         android:text="发布者名称"
         android:textSize="15dp" />

     <TextView
         android:id="@+id/newsEditText"
         android:layout_width="300dp"
         android:layout_height="60dp"
         android:layout_alignLeft="@+id/view3"
         android:layout_below="@+id/view3"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="50dp"
         android:background="@drawable/bg_edittext_normal"
         android:ems="10"
         android:hint="消息描述" />

     <ImageView
         android:id="@+id/imageView2"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="110dp"
         android:layout_weight="1"
         android:src="@drawable/ic_launcher" />

     <TextView
         android:id="@+id/textView3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="60dp"
         android:layout_marginTop="120dp"
         android:text="评论者名称"
         android:textSize="15dp" />

     <TextView
         android:id="@+id/commentEditText1"
         android:layout_width="300dp"
         android:layout_height="30dp"
         android:layout_alignLeft="@+id/view3"
         android:layout_below="@+id/view3"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="160dp"
         android:background="@drawable/bg_edittext_normal"
         android:ems="10"
         android:hint="评论内容" />

     <ImageView
         android:id="@+id/imageView3"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="190dp"
         android:layout_weight="1"
         android:src="@drawable/ic_launcher" />

     <TextView
         android:id="@+id/textView4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="60dp"
         android:layout_marginTop="200dp"
         android:text="评论者名称"
         android:textSize="15dp" />

     <TextView
         android:id="@+id/commentEditText2"
         android:layout_width="300dp"
         android:layout_height="30dp"
         android:layout_alignLeft="@+id/view3"
         android:layout_below="@+id/view3"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="240dp"
         android:background="@drawable/bg_edittext_normal"
         android:ems="10"
         android:hint="评论内容" />

     <EditText
         android:id="@+id/commentEditText3"
         android:layout_width="200dp"
         android:layout_height="35dp"
         android:layout_alignLeft="@+id/commentEditText2"
         android:layout_below="@+id/commentEditText2"
         android:layout_marginTop="32dp"
         android:background="@drawable/bg_edittext_normal"
         android:ems="10"
         android:hint="输入或选择一个标签"
         android:textSize="15dp" />

     <Button
         android:id="@+id/commentButton"
         android:layout_width="60dp"
         android:layout_height="35dp"
         android:layout_alignBaseline="@+id/commentEditText3"
         android:layout_alignBottom="@+id/commentEditText3"
         android:layout_marginLeft="14dp"
         android:layout_toRightOf="@+id/commentEditText3"
         android:text="评论"
         android:textSize="13dp" />

     <ImageButton
         android:id="@+id/imageButton3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/imageView3"
         android:layout_alignRight="@+id/commentEditText2"
         android:layout_marginRight="16dp"
         android:background="@color/skyblue"
         android:src="@android:drawable/btn_star" />

     <ImageButton
         android:id="@+id/imageButton4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/imageButton3"
         android:layout_alignTop="@+id/textView3"
         android:background="@color/skyblue"
         android:src="@android:drawable/btn_star" />

 </RelativeLayout>
	
</RelativeLayout>