<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue">
 <RelativeLayout
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <TextView
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="设置"
        android:textSize="20sp" />
    
    <Button
        android:id="@+id/changeInfo"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        android:text="修改信息" />
    
    <Button
        android:id="@+id/changePassword"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="95dp"
        android:layout_marginLeft="50dp"
        android:text="修改密码" />
    
     <Button
        android:id="@+id/versionUpdate"
       android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        android:text="版本更新" />

    <Button
        android:id="@+id/messageTips"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="205dp"
        android:layout_marginLeft="50dp"
        android:text="消息提示" />

   <Button
        android:id="@+id/aboutNeedU"
         android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="50dp"
        android:text="关于NeedU" />
   
   <Button
        android:id="@+id/exit"
         android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="315dp"
        android:layout_marginLeft="50dp"
        android:text="退出登录" />
   </RelativeLayout>
 <LinearLayout android:id="@+id/linearlayout02"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:background="#BB768e95">
	    <Button
			android:id="@+id/squareButton"
			android:text="广场"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button 
			android:id="@+id/personalButton"
			android:text="个人"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button 
			android:id="@+id/setButton"
			android:text="设置"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
	</LinearLayout>	
</RelativeLayout>