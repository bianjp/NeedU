<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
     tools:context="com.zhuomiankaifa.Ground$PlaceholderFragment" >
 <RelativeLayout
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="设置"
        android:textSize="20dp" />
    <Button
        android:id="@+id/modifyCodeButton"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="50dp"
        android:text="修改密码" />
    
    <Button
        android:id="@+id/updateButton"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="50dp"
        android:text="版本更新" />
     <Button
        android:id="@+id/newsButton"
       android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="165dp"
        android:layout_marginLeft="50dp"
        android:text="消息提示" />
    

    <Button
        android:id="@+id/NeeduButton"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="50dp"
        android:text="关于NeedU" />

   <Button
        android:id="@+id/cancelButton"
         android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="275dp"
        android:layout_marginLeft="50dp"
        android:text="退出登录" />
   </RelativeLayout>
 <LinearLayout android:id="@+id/linearlayout02"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:background="#BB768e95">
	    <Button 
	        android:text="广场"
			android:id="@+id/squareButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button android:text="个人"
			android:id="@+id/personalButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button android:text="设置"
			android:id="@+id/setButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
	</LinearLayout>	
</RelativeLayout>