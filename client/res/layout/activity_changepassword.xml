<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
     tools:context="com.zhuomiankaifa.Ground$PlaceholderFragment" >
 <RelativeLayout
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:text="修改密码"
        android:textSize="20dp" />

    <View
        android:layout_width="600dp"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:background="@color/black" />
    <EditText
        android:id="@+id/oldcodeEditText"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/newcodeEditText"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="42dp"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10"
        android:hint="输入旧密码" />
    

    

    <EditText
        android:id="@+id/newcodeEditText"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/ensurecodeEditText"
        android:layout_below="@+id/oldcodeEditText"
        android:layout_marginTop="35dp"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10"
        android:hint="输入新密码" />

    <EditText
        android:id="@+id/ensurecodeEditText"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_below="@+id/newcodeEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="@drawable/bg_edittext_normal"
        android:ems="10"
        android:hint="确认新密码" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/completeButton"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/ensurecodeEditText"
        android:layout_below="@+id/ensurecodeEditText"
        android:layout_marginTop="45dp"
        android:text="完成" />

    <Button
        android:id="@+id/cancelButton"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/completeButton"
        android:layout_alignBottom="@+id/completeButton"
        android:layout_alignRight="@+id/ensurecodeEditText"
        android:text="取消" />
     </RelativeLayout>
 <LinearLayout android:id="@+id/linearlayout02"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:background="#BB768e95">
	    <Button 
	        android:text="广场"
			android:id="@+id/button5"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button android:text="个人"
			android:id="@+id/button6"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button android:text="设置"
			android:id="@+id/button7"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
	</LinearLayout>	
</RelativeLayout>