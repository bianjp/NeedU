<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skyblue"
     tools:context="com.zhuomiankaifa.Ground$PlaceholderFragment" >
 <RelativeLayout
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:singleLine="true"
        android:background="@drawable/bg_edittext_normal"
        android:hint="输入一个标签"
        android:textSize="15sp" >
    </EditText>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/inputEditText"
        android:layout_alignBottom="@+id/inputEditText"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/inputEditText"
        android:textSize="13sp" 
        android:text="搜索" />
    
    <Button
        android:id="@+id/rankButton"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/inputEditText"
        android:layout_alignBottom="@+id/inputEditText"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/searchButton"
        android:textSize="13sp" 
        android:text="排行" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/bg_edittext_normal"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/bg_edittext_normal"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bg_edittext_normal"
        android:text="TextView" />
     <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="90dp"
        android:background="@drawable/bg_edittext_normal"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/bg_edittext_normal"
        android:text="TextView" />
    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/bg_edittext_normal"
        android:text="TextView" />
    </RelativeLayout>
 <LinearLayout android:id="@+id/linearlayout02"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="60dp"
	    android:layout_alignParentBottom="true"
	    android:background="#BB768e95">
	    <Button 
	        android:text="广场"
			android:id="@+id/squareButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button 
		    android:text="个人"
			android:id="@+id/personalButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
		<Button 
		    android:text="设置"
			android:id="@+id/setButton"
			android:layout_width="wrap_content"
			android:layout_height="60dp"
			android:layout_weight="1"
			android:background="#BB768e95">
		</Button>
	</LinearLayout>	

</RelativeLayout>