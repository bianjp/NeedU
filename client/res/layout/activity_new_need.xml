<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/relativelayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#D1EEEE">
    
	<TextView android:id="@+id/TextView01"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="@string/new_need"
	    android:layout_marginTop="10dp"
	    android:textSize="20sp">
	</TextView>
	<View android:id="@+id/line"
	    android:layout_width="fill_parent"
	    android:layout_height="1px"
	    android:layout_below="@id/TextView01" 
	    android:background="#000000"
	    android:layout_margin="10dp">
	</View>
	
	<RelativeLayout
	    android:id="@+id/relativelayout01"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/TextView01"
	    android:layout_margin="20dp"
	    android:background="@drawable/bg_edittext_normal2"
	    android:orientation="vertical"
	    android:padding="10dp" >

	    <TextView android:id="@+id/titieTextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			android:text="标题">
		</TextView>
		<EditText android:id="@+id/TitleEdit"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/titieTextView"
		    android:layout_alignBaseline="@id/titieTextView"
		    android:paddingLeft="5dp"
		    android:singleLine="true"
		    android:text=""
		    android:inputType="none"
		    android:ems="15"
		    android:background="@drawable/bg_edittext_normal">
		</EditText>
	    <TextView android:id="@+id/TextView02"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/titieTextView"
			android:layout_margin="10dp"
			android:text="@string/target">
		</TextView>
		<EditText android:id="@+id/TagEdit"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_toRightOf="@id/TextView02"
		    android:layout_alignBaseline="@id/TextView02"
		    android:paddingLeft="5dp"
		    android:singleLine="true"
		    android:text=""
		    android:inputType="none"
		    android:ems="5"
		    android:background="@drawable/bg_edittext_normal">
		</EditText>
		<EditText android:id="@+id/ContentEdit"
		    android:layout_width="fill_parent"
		    android:layout_height="150dp"
		    android:layout_below="@id/TextView02"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentRight="true"
		    android:padding="5dp"
		    android:inputType="textMultiLine"
		    android:gravity="left|top"
		    android:background="@drawable/bg_edittext_normal">
		</EditText>
		<LinearLayout android:id="@+id/addImageLayout"
		    android:layout_alignLeft="@id/ContentEdit"
		    android:layout_alignRight="@id/ContentEdit"
	    	android:layout_below="@id/ContentEdit"
	    	android:layout_width="fill_parent"
	   		android:layout_height="25dp"
	   		android:orientation="horizontal"
	   		android:layout_marginTop="10dp"/>
		
		<Button android:text="@string/addPic"
			android:id="@+id/AddButton"
			android:layout_width="wrap_content"
			android:layout_height="40dp"
			android:layout_below="@id/addImageLayout"
			android:layout_alignLeft="@id/TextView02">
		</Button>
	</RelativeLayout>
	
	<Button android:text="@string/makesure"
		android:id="@+id/MakesureButton"
		android:layout_width="100dp"
		android:layout_height="40dp"
		android:layout_below="@id/relativelayout01"
		android:layout_alignLeft="@id/relativelayout01">
	</Button>
	<Button android:text="@string/detect"
		android:id="@+id/DeleteButton"
		android:layout_width="100dp"
		android:layout_height="40dp"
		android:layout_alignTop="@id/MakesureButton"
		android:layout_alignRight="@id/relativelayout01">
	</Button>
</RelativeLayout>